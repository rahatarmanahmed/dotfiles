
if command -v eza &> /dev/null
then
  alias ls='eza'
  alias l='eza -bF --git --icons=always'
  alias ll='eza -lbF --git --icons=always'
  alias llm='eza -lbhgmF --git --sort=modified --icons=always'
  alias la='eza -lbhgaF  --git --color-scale --icons=always'
else
  alias la="ls -ahF"
  alias ls="ls -hF"
  alias ll="ls -lhF"
fi

alias "cd.."="cd ../"
alias up="cd ../"
alias cp="cp -r"
alias mkdir="mkdir -p"

alias c=clear
alias g=git
alias v=vim
alias t="tmux new-session -AD -s" # Use like `t work` to start/resume work session
alias y=yazi

# Git aliases
alias gst='git status'

# Command to manage dotfiles
# See https://developer.atlassian.com/blog/2016/02/best-way-to-store-dotfiles-git-bare-repo/
alias dot='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

# Nicer grep
alias grep='grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn}'

# alias xclip to pb(paste|copy)
if [ "$(uname -s | cut -c 1-5)" = "Linux" ]; then
    alias open=xdg-open
    alias pbcopy='xclip -selection clipboard'
    alias pbpaste='xclip -selection clipboard -o'
fi
